{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Podman Machine",
            "type": "shell",
            "command": "podman machine start || echo 'Podman machine start skipped (already running or error)'",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Start Podman",
            "type": "shell",
            "command": "podman compose up -d",
            "dependsOn": [
                "Start Podman Machine"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Start Backend",
            "type": "npm",
            "script": "start:debug",
            "path": "backend",
            "dependsOn": [
                "Start Podman"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*Nest application successfully started.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting compilation.*$",
                    "endsPattern": "^.*Nest application successfully started.*$"
                }
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            }
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "dev",
            "path": "frontend",
            "dependsOn": [
                "Start Backend"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*App URL.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*App URL.*$"
                }
            },
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            }
        },
        {
            "label": "Start All",
            "dependsOn": [
                "Start Frontend"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}